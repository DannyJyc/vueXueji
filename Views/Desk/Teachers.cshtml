    <script type="text/javascript">
    var vm = new Vue({
        el: "#divcontent",
        data: {
            countList: [],
            leList: []
        },
        mounted() {
            this.getAllcount(),
            this.getAll();
        },
        methods: {
            getAll: function () {
                axios.get('@Url.Action("Get", "Rollcall")'
                ).then(
                    (response) => {
                        this.leList = [];
                        for (var i = 0; i < response.data.length; i++) {
                            this.leList.push(response.data[i]);
                        }
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },getAllcount: function () {
                axios.get('@Url.Action("LecturerCount", "Desk")'
                ).then(
                    (response) => {
                        this.countList = [];
                        var dataObj = eval("(" + response.data + ")");
                        for (var i = 0; i < dataObj.length; i++) {
                            this.countList.push(dataObj[i]);
                        }


                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
            jump: function (id) {
                window.location.href ='/Rollcall/Addrollcall/'+id;
            }
        }

    });

    </script>
