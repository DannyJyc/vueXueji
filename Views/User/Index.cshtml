
<script src="~/Scripts/vue.js"></script>
<script src="~/Scripts/axios.js"></script>
<div id="app">
    用户名
    <input type="text" v-model="username" /><br />
    密码
    <input type="text" v-model="password" /><br />
    <a href="#" v-on:click="users(username,password)">登录</a><br />
    <a href="/User/Register">前往注册</a>
</div>
<script type="text/javascript">
    var vm = new Vue({
        el: "#app",
        data: {

        },
        mounted() {
        },
        methods: {
            users: function (username,password) {
                axios.post('@Url.Action("List", "User")', { Username: username, Password:password }).then(
                    (response) => {
                        if (response.data == "0") {
                            alert("用户名或密码错误!");
                        } else {
                            alert("修改成功" + response.data);
                        }

                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            }
        }

    });

</script>
